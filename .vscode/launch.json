    "version": "0.2.0",
    "configurations": [
        {
            "name": "Parse All IDLs",
            "type": "python",
            "request": "launch",
            "program": "unittests/midlparser_test.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}${pathSeparator}${env:PYTHONPATH}"}
        },      
        {
            "name": "Convert All IDLs",
            "type": "python",
            "request": "launch",
            "program": "unittests/idl2imp_test.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}${pathSeparator}${env:PYTHONPATH}"}
        },
        {
            "name": "IDL Scraper",
            "type": "python",
            "request": "launch",
            "program": "idl_scraper.py",
            "console": "integratedTerminal",
        },
        {
            "name": "IDL Test",
            "type": "python",
            "request": "launch",
            "program": "midl2impacket.py",
            "console": "integratedTerminal",
            "args":[
                "--in-file", "\"preprocessed/ms-wkst.idl\"",
                "--out-file", "\"generated/ms-wkst.py\"",
                "--import-dir", "\"preprocessed/\""

            ]
        },
        {
            "name": "Run EVEN Fuzzer",
            "type": "python",
            "request": "launch",
            "program": "fuzzer.py",
            "console": "integratedTerminal",
            "args":[
                "--idl", "\"preprocessed/ms-even.idl\"",
                "--name", "\"even\"",
                "--import-dir", "\"preprocessed/\"",
                "--count", "1",

            ]
        },
        {
            "name": "Run RPRN Fuzzer",
            "type": "python",
            "request": "launch",
            "program": "fuzzer.py",
            "console": "integratedTerminal",
            "args":[
                "--idl", "\"preprocessed/ms-rprn.idl\"",
                "--out-dir", "\"generated/\"",
                "--import-dir", "\"preprocessed/\"",
                "--count", "1",

            ]
        }
    ]
}