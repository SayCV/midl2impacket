    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test Current File",
            "type": "python",
            "request": "launch",
            //"program": "${fileDirname}/${fileBasenameNoExtension}.py",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}${pathSeparator}${env:PYTHONPATH}"}
        },      
        {
            "name": "Convert All IDLs",
            "type": "python",
            "request": "launch",
            "program": "unittests/idl2imp_test.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}${pathSeparator}${env:PYTHONPATH}"}
        },
        {
            "name": "Test IDL Scraper",
            "type": "python",
            "request": "launch",
            "program": "midl2impacket/idl_scraper.py",
            "console": "integratedTerminal",
        },
        {
            "name": "Step1 IDL Fix",
            "type": "python",
            "request": "launch",
            "program": "midl2impacket/idl_fix.py",
            "console": "integratedTerminal",
            "args":[
                "--in-dir", "\"unprocessed/\"",
                "--out-dir", "\"unprocessed/\"",
            ]
        },
        {
            "name": "Step2 IDL Preprocessor",
            "type": "python",
            "request": "launch",
            "program": "midl2impacket/idl_preprocessor.py",
            "console": "integratedTerminal",
            "env": {"PATH": "D:/Program Files (x86)/Microsoft Visual Studio 14.0/VC/bin;D:/Program Files (x86)/Microsoft Visual Studio 14.0/VC/bin/x86_amd64;${env:PATH}"},
            "args":[
                "--pp", "\"cl\"",
                "--args", "/EP",
                "--in-dir", "\"unprocessed/\"",
                "--out-dir", "\"processed/\""
            ]
        },
        {
            "name": "Step3 IDL2IMP",
            "type": "python",
            "request": "launch",
            "program": "test_wrapper.py",
            "console": "integratedTerminal",
            "args":[
                "--in-file", "\"processed/demo1.idl\"",
                "--out-file", "\"generated/demo1.py\"",
                "--import-dir", "\"midl2impacket/preprocessed/\""
            ]
        },
        {
            "name": "Run EVEN Fuzzer",
            "type": "python",
            "request": "launch",
            "program": "midl2impacket/fuzzer.py",
            "console": "integratedTerminal",
            "args":[
                "--idl", "\"midl2impacket/preprocessed/ms-even.idl\"",
                "--out-dir", "\"generated/\"",
                "--import-dir", "\"midl2impacket/preprocessed/\"",
                "--count", "1",

            ]
        },        
        {
            "name": "Run EVEN6 Fuzzer",
            "type": "python",
            "request": "launch",
            "program": "midl2impacket/fuzzer.py",
            "console": "integratedTerminal",
            "args":[
                "--idl", "\"preprocessed/ms-even6.idl\"",
                "--out-dir", "\"generated/\"",
                "--import-dir", "\"preprocessed/\"",
                "--count", "1",

            ]
        },
        {
            "name": "Run RPRN Fuzzer",
            "type": "python",
            "request": "launch",
            "program": "midl2impacket/fuzzer.py",
            "console": "integratedTerminal",
            "args":[
                "--idl", "\"preprocessed/ms-rprn.idl\"",
                "--out-dir", "\"generated/\"",
                "--import-dir", "\"preprocessed/\"",
                "--count", "1",

            ]
        }
    ]
}